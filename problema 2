using System;

namespace testeDeMesaP2_2
{
internal class Program
{
static void Main(string[] args)
{
Console.WriteLine("Digite o valor presente:");
decimal valorPresente = decimal.Parse(Console.ReadLine());

        Console.WriteLine("Digite a taxa de juros (%):");
        decimal taxaJuros = decimal.Parse(Console.ReadLine()) / 100;

        Console.WriteLine("Digite o per√≠odo em meses:");
        int periodoMes = int.Parse(Console.ReadLine());

        decimal valorFinal = valorPresente;

        Console.WriteLine("\nvalorPresente\t\ttaxaJuros\tMes\t\tRendimento\t\tValor Final");

        for (int mes = 1; mes <= periodoMes; mes++)
        {
            decimal valorAnterior = valorFinal;

            decimal rendimento = valorAnterior * taxaJuros;

            valorFinal = valorAnterior + rendimento;

            Console.WriteLine(
                $"R$ {valorPresente:F2}\t\t{taxaJuros * 100:F2}%\t\t{mes}\t\tR$ {rendimento:F2}\t\tR$ {valorFinal:F2}"
            );
        }
    }
}
}
