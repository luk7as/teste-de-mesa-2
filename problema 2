using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        CultureInfo br = new CultureInfo("pt-BR");

        Console.Write("Informe o valor presente (R$): ");
        decimal valorPresente = decimal.Parse(Console.ReadLine(), br);

        Console.Write("Informe a taxa de juros (% ao mês): ");
        decimal taxa = decimal.Parse(Console.ReadLine(), br) / 100;

        Console.Write("Informe o período em meses: ");
        int meses = int.Parse(Console.ReadLine());

        Console.WriteLine();
        Console.WriteLine("Mês | Taxa Juros | Rendimento | Rend. Líquido | Renda Acumulada");
        Console.WriteLine("---------------------------------------------------------------");

        decimal valorAtual = valorPresente;

        for (int mes = 1; mes <= meses; mes++)
        {
            // Juros compostos
            valorAtual = valorAtual * (1 + taxa);

            // Rendimento líquido (ganho total até o mês)
            decimal rendimentoLiquido = valorAtual - valorPresente;

            // Renda acumulada = capital atualizado (NÃO SOMA)
            decimal rendaAcumulada = valorAtual;

            Console.WriteLine(
                $"{mes,3} | {taxa * 100,9:F2}% | {valorAtual,11:C2} | {rendimentoLiquido,13:C2} | {rendaAcumulada,15:C2}"
            );
        }

        Console.WriteLine();
        Console.WriteLine("Pressione qualquer tecla para sair...");
        Console.ReadKey();
    }
}
