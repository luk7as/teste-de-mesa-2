using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        Console.Write("Informe o valor presente (R$): ");
        decimal valorPresente = decimal.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

        Console.Write("Informe a taxa de juros (% ao mês): ");
        decimal taxa = decimal.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

        Console.Write("Informe o período em meses: ");
        int periodo = int.Parse(Console.ReadLine());

        decimal i = taxa / 100;
        decimal valorFuturo = valorPresente * (1 + i * periodo);

        Console.WriteLine();
        Console.WriteLine("Valor Futuro: " + valorFuturo.ToString("C2"));
    }
}
