using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        CultureInfo cultura = new CultureInfo("pt-BR");

        Console.Write("Informe o valor do depósito mensal: ");
        decimal deposito = decimal.Parse(Console.ReadLine(), cultura);

        Console.Write("Informe a taxa de juros (% ao mês): ");
        decimal taxa = decimal.Parse(Console.ReadLine(), cultura);

        Console.Write("Informe o total de meses: ");
        int totalMeses = int.Parse(Console.ReadLine());

        Console.Write("Informe o mês do resgate (0 se não houver): ");
        int mesResgate = int.Parse(Console.ReadLine());

        decimal i = taxa / 100;
        decimal saldo = 0;

        Console.WriteLine();
        Console.WriteLine("Mês\tDepósito\tJuros\t\tRendimento\tResgate\t\tSaldo");

        for (int mes = 1; mes <= totalMeses; mes++)
        {
            saldo += deposito;

            decimal juros = saldo * i;
            saldo += juros;

            decimal resgate = 0;

            if (mes == mesResgate)
            {
                resgate = saldo;
                saldo = 0;
            }

            Console.WriteLine(
                $"{mes}\t{deposito.ToString("C2", cultura)}\t{juros.ToString("C2", cultura)}\t{juros.ToString("C2", cultura)}\t{resgate.ToString("C2", cultura)}\t{saldo.ToString("C2", cultura)}"
            );
        }

        Console.ReadLine();
    }
}
