using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        
        CultureInfo cultura = new CultureInfo("pt-BR");

            
            Console.Write("Valor Presente: ");
            decimal valorPresente = Convert.ToDecimal(Console.ReadLine(), cultura);

            Console.Write("Taxa de Juros (% a.m.): ");
            decimal taxaJuros = Convert.ToDecimal(Console.ReadLine(), cultura);

            Console.Write("Período (meses): ");
            int meses = int.Parse(Console.ReadLine());

            
            decimal taxa = taxaJuros / 100;

            
            decimal saldo = valorPresente;

            Console.WriteLine("\nvalor | taxa | mês | rendimento | renda líquida | renda acumulada | resgate | saldo final");

            
            for (int mes = 0; mes <= meses; mes++)
            {
                
                decimal rendimento = saldo * taxa;

                
                decimal rendaLiquida = rendimento;

                
                decimal rendaAcumulada = saldo + rendimento;

                
                decimal resgate = 0;
                if (mes == 5)
                {
                    resgate = 1000;
                }

                
                decimal saldoFinal = rendaAcumulada - resgate;

                
                Console.WriteLine(
                    $"{valorPresente.ToString("C", cultura)} | {taxaJuros}% | {mes} | " +
                    $"{rendimento.ToString("C", cultura)} | {rendaLiquida.ToString("C", cultura)} | " +
                    $"{rendaAcumulada.ToString("C", cultura)} | {resgate.ToString("C", cultura)} | {saldoFinal.ToString("C", cultura)}"
                );

                
                saldo = saldoFinal;
            }
        }
    }
