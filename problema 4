using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        decimal valorPresente = 2000m;
        decimal taxa = 2m;
        int periodoTotal = 6;
        int mesResgate = 5;

        decimal i = taxa / 100;
        int periodoAtual = 0;

        Console.WriteLine("MÃªs\tVP\t\tTaxa\tN\tVF\t\tRendimento\tResgate\t\tSaldo");

        for (int mes = 1; mes <= periodoTotal; mes++)
        {
            periodoAtual++;

            decimal valorFinal = valorPresente * (1 + i * periodoAtual);
            decimal rendimento = valorFinal - valorPresente;
            decimal resgate = 0;
            decimal saldoFinal = valorFinal;

            if (mes == mesResgate)
            {
                resgate = rendimento;
                saldoFinal = valorPresente;
                valorPresente = saldoFinal;
                periodoAtual = 0;
            }
            else
            {
                valorPresente = saldoFinal;
            }

            Console.WriteLine(
                $"{mes}\t{valorPresente:C2}\t{taxa}%\t{periodoAtual}\t{valorFinal:C2}\t{rendimento:C2}\t{resgate:C2}\t{saldoFinal:C2}"
            );
        }
    }
}
