using System;

namespace testeDeMesaP2_3
{
internal class Program
{
static void Main(string[] args)
{
Console.WriteLine("Digite o valor presente:");
decimal valorPresente = decimal.Parse(Console.ReadLine());

        Console.WriteLine("Digite a taxa de juros (%):");
        decimal taxaJuros = decimal.Parse(Console.ReadLine()) / 100;

        Console.WriteLine("Digite o per√≠odo em anos:");
        int periodoAnos = int.Parse(Console.ReadLine());
        int periodoMeses = periodoAnos * 12;

        decimal valorFinal = valorPresente;

        Console.WriteLine("\nvalorPresente\t\ttaxaJuros\tAnos\t\tRendimento\t\tValor Final");

        for (int anos = 1; anos <= periodoAnos; anos++)
        {
            decimal valorAnterior = valorFinal;

            decimal rendimento = valorAnterior * taxaJuros;

            valorFinal = valorAnterior + rendimento;

            Console.WriteLine(
                $"R$ {valorPresente:F2}\t\t{taxaJuros * 100:F2}%\t\t{anos}\t\tR$ {rendimento:F2}\t\t\tR$ {valorFinal:F2}"
            );
        }
    }
}
}
