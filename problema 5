using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        
        CultureInfo cultura = new CultureInfo("pt-BR");

            
            Console.Write("Valor Futuro (VF): ");
            decimal valorFuturo = Convert.ToDecimal(Console.ReadLine(), cultura);

            Console.Write("Taxa de Juros (%): ");
            decimal taxaJuros = Convert.ToDecimal(Console.ReadLine(), cultura);

            Console.Write("Período (anos): ");
            int periodo = int.Parse(Console.ReadLine());

            
            decimal taxa = taxaJuros / 100;

            
            // Fórmula: VP = VF / (1 + i)^t
            decimal valorPresente =
                valorFuturo / (decimal)Math.Pow((double)(1 + taxa), periodo);

            
            Console.WriteLine("\nValor Presente calculado: " +
                              valorPresente.ToString("C", cultura));
        }
    }
