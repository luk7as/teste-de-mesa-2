using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        CultureInfo cultura = new CultureInfo("pt-BR");

        Console.Write("Informe o Valor Futuro (R$): ");
        decimal valorFuturo = decimal.Parse(Console.ReadLine(), cultura);

        Console.Write("Informe a taxa de juros (% ao mês): ");
        decimal taxa = decimal.Parse(Console.ReadLine(), cultura);

        Console.Write("Informe o período (meses): ");
        int periodo = int.Parse(Console.ReadLine());

        decimal i = taxa / 100;

        // Fórmula correta: VP = VF / (1 + i) ^ t
        decimal valorPresente =
            valorFuturo / (decimal)Math.Pow((double)(1 + i), periodo);

        Console.WriteLine();
        Console.WriteLine("Valor Presente calculado: " + valorPresente.ToString("C2", cultura));
        Console.WriteLine($"Taxa: {taxa}% ao mês");
        Console.WriteLine($"Período: {periodo} meses");
    }
}
