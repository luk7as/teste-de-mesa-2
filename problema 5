using System;
using System.Globalization;

class Program
{
    static void Main()
    {
        Console.Write("Informe o Valor Futuro (R$): ");
        decimal valorFuturo = decimal.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

        Console.Write("Informe a taxa de juros (% ao mês): ");
        decimal taxa = decimal.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

        Console.Write("Informe o período (meses): ");
        int periodo = int.Parse(Console.ReadLine());

        decimal i = taxa / 100;

        decimal valorPresente = valorFuturo / (1 + i * periodo);

        Console.WriteLine();
        Console.WriteLine("Valor Presente calculado: " + valorPresente.ToString("C2"));
        Console.WriteLine($"Taxa: {taxa}%");
        Console.WriteLine($"Período: {periodo} meses");
    }
}
